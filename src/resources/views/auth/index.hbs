<script src="/js/validator.js"></script>
<script>
    Validator({
        form: '.form-login',
        formGroup: '.form-input',
        errorMessageSelector: '.form-message',
        validate: [
            Validator.isRequired('#email'),
            Validator.isRequired('#password'),
        ]
    })
</script>