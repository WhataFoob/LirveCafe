<div class="login-wrapper">
    <form method="POST" action="/auth/login" class="form-login">
        <div class="form-wrapper">
            <h2>ĐĂNG NHẬP</h2>
            {{#if errors}}
            <div class="form-errors">
                {{#each errors}}
                    <span class="form-error">{{this}}</span>
                {{/each}}
            </div>
            {{/if}}
            <div class="form-input">
                <label for="email">Tên đăng nhập</label>
                <div class="inputLogin-wrapper">
                    <input type="email" id="email" placeholder="Email/Số điện thoại/Tên đăng nhập" name="key" value="{{values.key}}">
                </div>
                <span class="form-message"></span>
            </div>

            <div class="form-input">
                <label for="password">Mật khẩu</label>
                <div class="inputLogin-wrapper">
                    <input type="password" id="password" placeholder="Mật khẩu" name="password" value="{{values.password}}">

                </div>
                <span class="form-message"></span>
            </div>

            <button type="submit" class="btn-submit-login">ĐĂNG NHẬP</button>

            <div class="optional">
                <a href="" class="">Quên mật khẩu</a>
            </div>

            <div class="another-option">
                <span>Bạn lần đầu tiên đến với LirveCafe?</span>
                <a href="" class="">Đăng ký</a>
            </div>
        </div>

    </form>

</div>



